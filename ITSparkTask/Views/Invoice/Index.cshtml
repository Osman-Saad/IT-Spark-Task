@model IEnumerable<InvoiceViewModel>

@{
    ViewData["Title"] = "Invoices";
}

<h2>Invoices</h2>



<table id="invoiceTable" class="table table-striped table-bordered" >
    <thead>
        <tr>
            <th>Invoice Number</th>
            <th>Date</th>
            <th>Type</th>
            <th>Items</th>
            <th style="text-align: left;">Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.Id</td>
                <td>@invoice.Date.ToString("yyyy-MM-dd")</td>
                <td>@invoice.Type</td>
                <td>@string.Join(", ", invoice.Items.Select(I=>I.Name))</td>
                <td>@invoice.TotalPrice.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Update" asp-route-id="@invoice.Id" class="btn btn-warning btn-sm">Update</a>
                    <a asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/jszip-3.10.1/dt-2.3.4/b-3.2.5/b-html5-3.2.5/b-print-3.2.5/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#invoiceTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'pdf', 'print'],
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: true,
                pageLength: 10,
                columnDefs: [{ targets: -1, orderable: false }
                ]
            });
        });
    </script>
}
