@model InvoiceViewModel

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label">Date</label>
        <input class="form-control" asp-for="Date" type="date" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Invoice Type</label>
        <input class="form-control" asp-for="Type" />
    </div>
</div>

<hr />
@if (Model.Items.Count > 0)
{
    <h4>Invoice Items</h4>

    <table class="table table-bordered" id="itemsTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("F2")</td>
                    <td class="itemTotal">@((item.Quantity * item.UnitPrice).ToString("F2"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end fw-bold">Grand Total</td>
                <td id="grandTotal" class="fw-bold">@Model.Items.Sum(I => I.Total)</td>
            </tr>
        </tfoot>
    </table>

}
else
{
    <div class="alert alert-info">No items found for this invoice.</div>
}


