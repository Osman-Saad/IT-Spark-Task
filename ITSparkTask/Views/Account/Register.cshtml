@model RegisterViewModel
@{
	Layout = "_AuthLayout";
	ViewData["Title"] = "Register";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email"></span>
			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password"></span>
			<input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<span asp-validation-for="ConfirmPassword"></span>
			<input type="submit" value="SIGNUP">
		</form>
		<p>have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}